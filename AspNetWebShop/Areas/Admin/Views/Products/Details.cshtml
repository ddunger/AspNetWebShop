@model AspNetWebShop.Models.ProductData.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HasColors)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HasColors)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer.Name)
        </dd>
        @if (Model.HasColors)
        {
            <dt class="col-sm-2">
                Available Colors
            </dt>
            <dd class="col-sm-10">
                <div class="form-group" >
                    <select asp-for="Id" class="form-control" style="max-width:100px" asp-items="ViewBag.Colors"></select>
                </div>
            </dd>
        }
        @if (Model.Category.Name == "Footwear")
        {
            <dt class="col-sm-2">
                Available Sizes
            </dt>
            <dd class="col-sm-10">
                <div class="form-group">
                    <select asp-for="Id" class="form-control" style="max-width:100px" asp-items="ViewBag.FootwearSizes"></select>
                </div>
            </dd>
        }
        @if (Model.Category.Name == "Cloathing")
        {
            <dt class="col-sm-2">
                Available Sizes
            </dt>
            <dd class="col-sm-10">
                <div class="form-group">
                    <select asp-for="Id" class="form-control" style="max-width:100px" asp-items="ViewBag.CloathingSizes"></select>
                </div>
            </dd>
        }
        
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
